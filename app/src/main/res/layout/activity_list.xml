<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

        <!-- 로고 영역: 페이드 + parallax -->
        <RelativeLayout
            android:id="@+id/logoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="24dp"
            android:background="@android:color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- 1) 오른쪽 최상단: 다크/라이트 토글 -->
            <Button
                android:id="@+id/btnThemeToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🌙/☀️"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/btn_background"
                android:textColor="@color/btn_text" />

            <!-- 2) 토글 버튼 바로 아래에 로고 -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/btnThemeToggle"
                android:layout_marginTop="16dp"
                android:src="@drawable/memmo_logo"
                android:contentDescription="memmo 로고" />

            <!-- 3) 로고 바로 아래에 앱 이름 -->
            <TextView
                android:id="@+id/appNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logoImage"
                android:layout_centerHorizontal="true"
                android:paddingTop="8dp"
                android:text="전체 노트"
                android:textColor="#333333"
                android:textSize="30sp" />
        </RelativeLayout>

        <!-- 아이콘 메뉴: 로고 아래 위치, 스크롤 시 상단 고정 -->
        <LinearLayout
            android:id="@+id/iconBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingVertical="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_scrollFlags="scroll|enterAlways|snap">

            <ImageView
                android:id="@+id/icon_menu"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                android:contentDescription="햄버거"
                android:src="@drawable/baseline_menu_24"
                tools:visibility="visible" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="검색"
                    android:src="@drawable/baseline_search_24"
                    tools:visibility="visible" />

                <ImageView
                    android:id="@+id/icon_more"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:contentDescription="더보기"
                    android:src="@drawable/baseline_more_vert_24"
                    tools:visibility="visible" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_document"
        tools:visibility="visible" />

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/buttonRename"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="제목 수정" />

        <Button
            android:id="@+id/buttonDelete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="삭제" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/buttonCreateDocument"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text=""
        app:backgroundTint="#ffffff"
        app:icon="@drawable/baseline_add_24"
        app:iconTint="@android:color/black"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_field"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="90dp"
        android:text="요구사항"
        android:textColor="#434343"
        android:visibility="gone"
        app:backgroundTint="#B9E6FB"
        app:icon="@drawable/baseline_chat_24"
        app:iconPadding="8dp"
        app:iconTint="#434343"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_write"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="230dp"
        android:text="글쓰기"
        android:textColor="#434343"
        android:visibility="gone"
        app:backgroundTint="#B9E6FB"
        app:icon="@drawable/baseline_text_snippet_24"
        app:iconPadding="8dp"
        app:iconTint="#434343"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_chat"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="160dp"
        android:text="작문 도우미"
        android:textColor="#434343"
        android:visibility="gone"
        app:backgroundTint="#B9E6FB"
        app:icon="@drawable/baseline_chat_24"
        app:iconPadding="8dp"
        app:iconTint="#434343"
        tools:visibility="visible" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
