<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 다크 모드 전용 테마 (values/styles.xml 의 Theme.Field.Light 를 오버라이드) -->
    <style name="Theme.Field.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- 모든 클릭 가능한 뷰에 리플 효과 -->
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>

        <!-- 다크 모드 색상 설정 -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- 상태바 색상 -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/black</item>
    </style>

</resources>
